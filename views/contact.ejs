    <!-- Section: Design Block -->
<section class="background-radial-gradient overflow-hidden mt-5 ">
   
    <div class="container px-4 py-5 px-md-5 text-center text-lg-start my-5">
      <div class="row gx-lg-5 align-items-center mb-5">
        <div class="col-lg-6 mb-5 mb-lg-0" style="z-index: 10">
          <h1 class="my-5 display-5 fw-bold ls-tight" style="color: hsl(218, 81%, 95%)">
            Get In Touch <br />
            <span style="color: hsl(218, 81%, 75%)">for watching World wide top Contant</span>
          </h1>
          <p class="mb-4 opacity-70" style="color: hsl(218, 81%, 85%)">
            Lorem ipsum dolor, sit amet consectetur adipisicing elit.
            Temporibus, expedita iusto veniam atque, magni tempora mollitia
            dolorum consequatur nulla, neque debitis eos reprehenderit quasi
            ab ipsum nisi dolorem modi. Quos?
          </p>
        </div>
  
        <div class="col-lg-6 mb-5 mb-lg-0 position-relative">
          <div id="radius-shape-1" class="position-absolute rounded-circle shadow-5-strong"></div>
          <div id="radius-shape-2" class="position-absolute shadow-5-strong"></div>
  
          <div class="card bg-glass">
            <div class="card-body px-4 py-5 px-md-5">
              <form method="post" action="/contact">
                <!-- 2 column grid layout with text inputs for the first and last names -->
                <div class="row">
                  <div class="col-md-6 mb-4">
                    <div data-mdb-input-init class="form-outline">
                      <input type="text" id="form3Example1" class="form-control" name="name" />
                      <label class="form-label" for="form3Example1">Your Name</label>
                    </div>
                  </div>
                  <div class="col-md-6 mb-4">
                    <div data-mdb-input-init class="form-outline">
                      <input type="email" id="form3Example2" class="form-control" name="email" />
                      <label class="form-label" for="form3Example2">Email</label>
                    </div>
                  </div>
                </div>
  
                <!-- contact input -->
                <div data-mdb-input-init class="form-outline mb-4">
                  <input type="text" id="form3Example3" class="form-control" name="contact" />
                  <label class="form-label" for="form3Example3">Contact</label>
                </div>
                <!-- subject input -->
                <div data-mdb-input-init class="form-outline mb-4">
                  <input type="text" id="form3Example3" class="form-control" name="subject" />
                  <label class="form-label" for="form3Example3">Subject</label>
                </div>
  
                <!-- massage input -->
                <div data-mdb-input-init class="form-outline mb-4">
                  <input type="contact" id="form3Example4" class="form-control" name="massage" />
                  <label class="form-label" for="form3Example4">Type your massage</label>
                </div>
  
                <!-- Checkbox -->
                <div class="form-check d-flex justify-content-center mb-4">
                  <input class="form-check-input me-2" type="checkbox" value="" id="form2Example33" checked  />
                  <label class="form-check-label" for="form2Example33">
                    Request for call
                  </label>
                </div>
  
                <!-- Submit button -->
                <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-block mb-4">
                  Contact
                </button>
  
                <!-- Register buttons -->
                
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
