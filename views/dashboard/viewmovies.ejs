


  <%- include('header.ejs') %>

<section class="background-radial-gradient overflow-hidden">
  <div class="container-fluid">
    <div class="row">
      <div class="col-2 text-uppercase">
        <%- include('left.ejs') %>
      </div>
      <div class="col-10 tableOverflow mt-5 pt-5">
        <h2 class="text-center text-light">View Movies Data</h2>

        <!-- Table -->
        <table class="table table-dark table-hover table-bordered table-responsive overflow-x-scroll" id="dashtable">
          <% if (moviesdata.length > 0) { %>
            <thead>
              <tr class="table-active">
                <th class="p-2">Name</th>
                <th>Date</th>
                <th class="description">Description</th>
                <th>Age</th>
                <th>Rating</th>
                <th>Genre</th>
                <th>Duration</th>
                <th>Quality</th>
                <th>Country</th>
                <th>Cast</th>
                <th>Director</th>
                <th>Cover</th>
                <th>Edit</th>
                <th>Delete</th>
              </tr>
            </thead>
            <!-- Added id="movieTable" for search functionality -->
            <tbody id="movieTable">
              <% for (var i = 0; i < moviesdata.length; i++) { %>
                <tr>
                  <td><%= moviesdata[i].moviename %></td>
                  <td><%= moviesdata[i].date %></td>
                  <td class="description"><%= moviesdata[i].description %></td>
                  <td><%= moviesdata[i].age %>+</td>
                  <td><%= moviesdata[i].rating %>+</td>
                  <td><%= moviesdata[i].choose_genere %></td>
                  <td><%= moviesdata[i].duration %></td>
                  <td><%= moviesdata[i].quality %></td>
                  <td><%= moviesdata[i].country %></td>
                  <td><%= moviesdata[i].cast %></td>
                  <td><%= moviesdata[i].director %></td>
                  <td>
                    <img src="/<%= moviesdata[i].cover %>" alt="movie img" class="img-fluid" width="100">
                  </td>
                  <td>
                    <a href="/edit2/<%= moviesdata[i]._id %>" class="btn btn-outline-success"><i class="bi bi-pencil text-light"></i></a>
                  </td>
                  <td>
                    <a href="/delete2/<%= moviesdata[i]._id %>" class="btn btn-outline-danger"><i class="bi bi-trash3 text-light"></i></a>
                  </td>
                </tr>
              <% } %>
            </tbody>
          <% } else { %>
            <p class="text-center text-danger fs-4">No records found.</p>
          <% } %>
        </table>
      </div>
    </div>
  </div>
</section>
</body>

</html>