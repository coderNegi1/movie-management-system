 


<%- include('header.ejs') %>

<section class="background-radial-gradient overflow-hidden">
  <div class="container-fluid">
    <div class="row">
      <div class="col-2 text-uppercase">
        <%- include('left.ejs') %>
      </div>
      <div class="col-10 align-content-center tableOverflow mt-5 pt-5">
        <h2 class="text-center text-light">View Contact</h2>

        <!-- Contact Table -->
        <table class="table table-dark table-hover" >
          <% if (contdata.length > 0) { %>
            <thead>
              <tr class="table-active">
                <th>Name</th>
                <th>Email</th>
                <th>Subject</th>
                <th>Message</th>
                <th>Edit</th>
                <th>Delete</th>
              </tr>
            </thead>
            <tbody id="contactTable">
              <% for (var i = 0; i < contdata.length; i++) { %>
                <tr>
                  <td><%= contdata[i].name %></td>
                  <td><%= contdata[i].email %></td>
                  <td><%= contdata[i].subject %></td>
                  <td><%= contdata[i].massage %></td>
                  <td><a href="/edit3/<%= contdata[i]._id %>" class="btn btn-outline-success"><i class="bi bi-pencil text-light"></i></a></td>
                  <td><a href="/delete3/<%= contdata[i]._id %>" class="btn btn-outline-danger"><i class="bi bi-trash3 text-light"></i></a></td>
                </tr>
              <% } %>
            </tbody>
          <% } else { %>
            <p class="text-center text-danger fs-4">No contact records found.</p>
          <% } %>
        </table>
      </div>
    </div>
  </div>
</section>
